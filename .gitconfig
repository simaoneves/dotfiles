[core]
    excludesfile = ~/.global.gitignore
[user]
	name = Sim√£o Neves
	email = simaocostaneves@gmail.com
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[push]
	default = simple
[color]
	ui = true
[color "status"]
    added = green
    changed = red
    untracked = yellow
    branch = red
    unmerged = blue
[init]
	templatedir = ~/.git-templates
[commit]
	template = ~/.git-templates/git_commit_message.txt
